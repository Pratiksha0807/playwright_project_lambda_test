# Gitpod configuration for Playwright + TypeScript project

tasks:
  - name: Setup
    init: |
      npm install
      npx playwright install --with-deps
    command: |
      echo "âœ… Environment ready! Run your tests with:"
      echo "   npx playwright test"

# Set VS Code as the default IDE in Gitpod
gitpod:
  workspaceLocation: .
  vscode:
    extensions:
      - ms-playwright.playwright
      - dbaeumer.vscode-eslint

# Ports (for debugging Playwright if needed)
ports:
  - port: 9323
    onOpen: ignore
